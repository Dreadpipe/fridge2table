	"dependencies": {
		"cron": "^1.7.1",
		"dotenv": "^8.0.0",
		"expo-server-sdk": "^3.3.0",
		"express": "^4.18.2",
		"if-env": "^1.0.4",
		"mongoose": "^5.5.15"
	},
	"devDependencies": {
		"concurrently": "^4.1.0",
